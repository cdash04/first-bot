{
    "name": "express-ts-template",
    "version": "1.2.0",
    "description": "Simple starter template for ExpressJs and TypeScript based on expressjs/generator and TypeScript-Node-Starter",
    "main": "server.js",
    "scripts": {
        "start": "yarn run serve",
        "start:bot": "pm2 start bot --env development",
        "build": "yarn run build-ts",
        "serve": "node dist/server.js",
        "dev": "env-cmd -f .env.dev sls offline start --httpPort 4000",
        "dev:bot": "env-cmd -f .env.dev ts-node src/bot",
        "deploy:dev": "NODE_ENV=dev sls deploy",
        "migrate:local": "NODE_ENV=local sls dynamodb start --migrate",
        "test": "jest --coverage=false --verbose",
        "build-ts": "tsc",
        "lint": "eslint src/**/*.ts",
        "lint-fix": "yarn lint --fix",
        "typecheck": "tsc --noEmit",
        "run-prettier": "prettier src/*.ts",
        "validate-prettiness": "yarn run-prettier -c",
        "make-prettier": "yarn run-prettier --write",
        "start:local-db": "NODE_ENV=dev sls dynamodb install"
    },
    "author": "Christophe Duchesne-Ashworth",
    "license": "ISC",
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.53.0",
        "@twurple/api": "^5.0.18",
        "@twurple/auth": "^5.0.18",
        "aws-lambda": "^1.0.7",
        "aws-sdk": "^2.1087.0",
        "axios": "^0.26.1",
        "commander": "^9.1.0",
        "crypto": "^1.0.1",
        "dotenv": "^16.0.0",
        "dynamodb-onetable": "2.3.5",
        "env-cmd": "^10.1.0",
        "express": "^4.17.3",
        "fs": "^0.0.1-security",
        "https": "^1.0.0",
        "lambda-api": "^0.11.2",
        "tmi.js": "^1.8.5"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.93",
        "@types/express": "^4.17.13",
        "@types/http-errors": "^1.8.2",
        "@types/jest": "^27.4.1",
        "@types/morgan": "1.9.3",
        "@types/node": "^17.0.21",
        "@types/supertest": "2.0.11",
        "@types/tmi.js": "^1.8.1",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "concurrently": "^7.0.0",
        "eslint": "^8.10.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.5.1",
        "nodemon": "2.0.15",
        "prettier": "2.5.1",
        "serverless": "^3.14.0",
        "serverless-offline": "^8.5.0",
        "supertest": "6.2.2",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.2"
    }
}
